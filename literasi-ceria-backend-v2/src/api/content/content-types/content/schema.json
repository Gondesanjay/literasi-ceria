{
  "kind": "collectionType",
  "collectionName": "contents",
  "info": {
    "singularName": "content",
    "pluralName": "contents",
    "displayName": "Content"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "judul": {
      "type": "string",
      "required": true
    },
    "deskripsi": {
      "type": "blocks"
    },
    "tipe_konten": {
      "type": "enumeration",
      "enum": [
        "video_cerita",
        "game_huruf",
        "game_angka"
      ]
    },
    "video_url": {
      "type": "string"
    },
    "quizzes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::quiz.quiz"
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    }
  }
}
